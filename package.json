{
  "name": "toneflix",
  "private": true,
  "workspaces": [
    "otp-input",
    "runner",
    "docs"
  ],
  "scripts": {
    "build": "lerna run build",
    "preview": "lerna run dev --scope=runner --",
    "lint": "yarn eslint && yarn prettier -- --check",
    "fmt": "yarn eslint -- && yarn prettier -- --write",
    "prettier": "prettier \"**/*.{css,html,vue,js,mjs,ts}\"",
    "eslint": "eslint .",
    "ci:publish:latest": "lerna version --conventional-commits --force-publish --yes && lerna exec -- npm publish --tag latest --provenance;"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^8.57.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "18.18.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.0",
    "lerna": "^8.1.7",
    "prettier": "~2.3.0",
    "sass": "^1.77.8",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0",
    "vue": "^3.1"
  },
  "packageManager": "yarn@4.4.0",
  "dependencies": {
    "eslint-plugin-vue": "^9.27.0",
    "vue-eslint-parser": "^9.4.3"
  }
}
